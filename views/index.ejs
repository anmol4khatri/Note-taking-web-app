<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main bg-[#021526] w-full min-h-screen p-12" >
        <div class="form">
            <form action="/create" method="post">
                <input class="block text-white bg-[#03346E] w-full p-4 rounded-xl" type="text" placeholder="Tittle" name="tittle">
                <textarea class="block text-white bg-[#03346E] w-full mt-3 p-4 h-60 resize-none rounded-xl" placeholder="Start taking notes here....." name="details"></textarea>
                <input class="text-black bg-[#6EACDA] rounded-lg p-2 w-full mt-3" type="submit" value="Create Note">
            </form>
        </div>
        <div class="tasks mt-36">

            <% if(files.length > 0) { %>
                <% files.forEach(value => { %>
                    <div class="task bg-[#03346E] rounded-xl p-4 mb-3">
                        <h1 class="text-white text-3xl tracking-tighter"><%= value %></h1>
                        <a class="text-[#E2E2B6] inline-block mt-3 opacity-65" href="./files/<%= value%>">Read more</a>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-white">No Notes Yet</h3>
            <% } %>

        </div>
    </div>
</body>
</html>